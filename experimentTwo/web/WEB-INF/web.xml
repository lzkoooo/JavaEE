<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FunctionServlet</servlet-name>
        <servlet-class>FunctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FunctionServlet</servlet-name>
        <url-pattern>/FunctionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChooseServlet</servlet-name>
        <servlet-class>ChooseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChooseServlet</servlet-name>
        <url-pattern>/ChooseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PersonServlet</servlet-name>
        <servlet-class>PersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonServlet</servlet-name>
        <url-pattern>/PersonServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CourseInformation</servlet-name>
        <servlet-class>CourseInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseInformation</servlet-name>
        <url-pattern>/CourseInformationServlet</url-pattern>
    </servlet-mapping>



    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.html</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>